#!/usr/bin/env perl
use strict;
use warnings;
use DBI;
use Data::Dumper;

my $vinland = DBI->connect(
    sprintf('DBI:Pg:database=%s;host=%s', 'vinland_3', $ENV{'DB_HOSTNAME_DEV'}),
    $ENV{'DB_USERNAME_DEV'},
    $ENV{'DB_PASSWORD_DEV'},
);

$vinland->do('
    INSERT INTO proteins_xrefs (protein_id, source, ref)
    SELECT id, \'accession\', accession FROM proteins
    WHERE type = \'h\'
');

$vinland->do('
    INSERT INTO proteins_xrefs (protein_id, source, ref)
    SELECT id, \'name\', name FROM proteins
    WHERE type = \'h\'
');
